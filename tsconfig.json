    "target": "ES2020",
    "outDir": "out",
    "rootDir": "src",
    "lib": ["ES2020", "DOM"],
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "vite.config.ts",
    "postcss.config.js",
    "tailwind.config.js"
  ]
}